<% post.post_comments.each do |post_comment| %>
  <div class="container-fuild border p-3 ">
    <div class="row">
      <div class="col-1">
        <%= image_tag post_comment.end_user.profile_image, size:'40x40', class:"rounded-circle shadow-sm" %>
      </div>
      <div class="col-10">
        <div class="post-user">
          <%= link_to post_comment.end_user.name, end_user_path(post_comment.end_user.id), class:'link-dark'  %>
          <p class="fs-6 text-secondary d-inline">
            <%= post_comment.end_user.unique_id %>
          </p>
        </div>
        <div class="post-body">
          <p><%= post_comment.body %></p>
        </div>
      </div>
      
      <div class="col-1">
        <% if post_comment.end_user.id == current_end_user.id %>
        <div class="dropdown">
          <%= link_to "コメントを削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "コメントを削除しますか？", class:"text-dark dropdown-item fs-6" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>