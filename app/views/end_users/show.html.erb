<%= render 'layouts/header' %>
<%= render 'layouts/navgation' %>

<div class="container-xl">
  <div class="row">
    <div style="width: 16%; height: 700px;"></div>
    <div class="col-md-8 col-xl-9 ps-0">
      <%= flash[:notice] %>
      <% if @post.errors.any? %>
        <div class="error">
          <% @post.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
      <%= render 'profile', end_user: @end_user %>
      
      <ul class="nav nav-tabs">
        <li class="nav-item text-center" style="width: 34%;">
          <a class="nav-link active fs-6 text-secondary" aria-current="page" href="#">投稿</a>
        </li>
        <li class="nav-item text-center" style="width: 33%;">
          <a class="nav-link" href="#">コメント</a>
        </li>
        <li class="nav-item text-center" style="width: 33%;">
          <a class="nav-link" href="#">ブックマーク</a>
        </li>
      </ul>
      <%= render 'show', end_user_posts: @end_user_posts %>
    </div>
  </div>
</div>