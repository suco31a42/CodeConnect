<%= render 'layouts/header' %>
<%= render 'layouts/navgation' %>

<div class="container-xl">
  <div class="row">
    <div class="col-md-1 col-xl-2"></div>
    <div class="col-md-8 col-xl-9 ps-0">
      <%= flash[:notice] %>
      <% if @post.errors.any? %>
        <div class="error">
          <% @post.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">投稿</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">コメント</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">ブックマーク</a>
        </li>
      </ul>
      <%= render 'posts/index', posts: @end_user.posts %>
    </div>
  </div>
</div>