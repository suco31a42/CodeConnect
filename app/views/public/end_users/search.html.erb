<% content_for(:title, 'ユーザー検索結果') %>
<%= render 'layouts/header' %>
<%= render 'layouts/navgation' %>
<%= render 'layouts/back' %>

<div class="container-xl">
  <div class="row">
    <div class="" style="width: 16%; height: 700px;"></div>
    <div class="col-md-8 col-xl-9 ps-0">
      <%= flash[:notice] %>
      <%= render 'layouts/errors', obj: @post %>
      <ul class="nav nav-tabs mt-3">
        <li class="nav-item text-center w-100">
          <%= sort_link(@q_end_users, :created_at, "登録順", {default_order: :desc}, {class:"nav-link fs-5 text-dark text-decoration-underline"}) %>
        </li>
      </ul>
      <% if @end_users.empty? %>
        <p class="fs-5 text-center border h-25 pt-5">検索内容と一致するユーザーは探すことができませんでした</p>
      <% else %>
        <div class="scroll-list jscroll">
          <%= render 'follow_index', end_users: @end_users %>
          <%= paginate @end_users %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>