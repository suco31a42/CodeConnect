<% content_for(:title, '検索結果') %>
<%= render 'layouts/header' %>
<%= render 'layouts/navgation' %>
<%= render 'layouts/back' %>

<div class="container-xl">
  <div class="row">
    <div class="" style="width: 16%; height: 700px;"></div>
    <div class="col-md-8 col-xl-9 ps-0">
      <%= flash[:notice] %>
      <%= render 'layouts/errors', obj: @post %>
      <ul class="nav nav-tabs mt-3">
        <li class="nav-item text-center w-50">
          <%= sort_link(@search, :created_at, "投稿順", {default_order: :desc}, {class:"nav-link fs-5 text-dark text-decoration-underline"}) %>
        </li>
        <li class="nav-item text-center w-50">
          <%= sort_link(@search, :likes_count, "評価順", {default_order: :desc}, {class:"nav-link fs-5 text-dark text-decoration-underline"}) %>
        </li>
      </ul>
      <div class="scroll-list jscroll">
        <% @post_result.each do |post_list| %>
          <%= render 'index', post_list: post_list %>
        <% end %>
        <%= paginate @post_result %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>