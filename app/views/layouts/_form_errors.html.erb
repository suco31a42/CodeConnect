<% if obj.errors.include?(attribute) %>
  <% if obj.errors.any? %>
    <div class="alert alert-secondary pb-0 mb-0">
      <button type="button" class="close" data-dismiss="alert">  &times;</button>
      <ul>
        <% obj.errors.full_messages_for(attribute).each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
