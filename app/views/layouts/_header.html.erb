<% if admin_signed_in? %>
  <% if request.fullpath.include? "/admin" %>
    <header class="bg-dark border-bottom">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <%= link_to root_path do %>
            <%= image_tag 'CodeConnect.jpg',size:"100%x100%" %>
          <% end %>
          <div class="w-100 text-center">
            <%= link_to "ユーザー一覧", admin_root_path ,class: 'btn btn-primary fs-6' %>
            <%= link_to "投稿一覧", admin_posts_path ,class: 'btn btn-primary mx-5 fs-6' %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-primary fs-6' %>
          </div>
        </div>
      </nav>
    </header>
  <% end %>
<% elsif end_user_signed_in? %>
  <header class="container-fuild">
    <div class="row">
      <div class="col-12">
        <nav class="navbar navbar-dark bg-dark" style="height: 90px;">
          <div class="container-fluid">
            <div class="mx-auto d-inline-block">
              <div class="d-inline-block">
                <%= search_form_for @q_posts, url: search_posts_path, class:"d-flex" do |f| %>
                  <%= f.search_field :body_cont, class:"form-control mx-auto", placeholder:"投稿検索…", required:"required" %>
                  <%= f.button :type => "submit", class:"btn btn-primary btn-sm ml-3", style:"width: 20%;"  do %>
                    <i class="bi bi-search fs-6 text-light"></i>
                  <% end %>
                <% end %>
              </div>
              <div class="d-inline-block ml-5">
                <%= search_form_for @q_end_users, url: search_end_users_path, class:"d-flex" do |f| %>
                  <%= f.search_field :name_cont, class:"form-control mx-auto", placeholder:"ユーザー検索…", required:"required" %>
                  <%= f.button :type => "submit", class:"btn btn-primary btn-sm ml-3", style:"width: 20%;"  do %>
                    <i class="bi bi-search fs-6 text-light"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= link_to root_path do %>
              <%= image_tag 'CodeConnect.jpg',size:"100%x100%" %>
            <% end %>
          </div>
        </nav>
      </div>
    </div>
  </header>
<% end %>