<% content_for(:title, 'ホーム') %>
<%= render 'layouts/header' %>
<%= render 'layouts/navgation' %>

<div class="container-xl">
  <div class="row">
    <div class="" style="width: 16%; height: 700px;"></div>
    <div class="col-md-8 col-xl-9 ps-0">
      <%= flash[:notice] %>
      <%= render 'layouts/errors', obj: @post %>
      <ul class="nav nav-tabs">
        <li class="nav-item text-center" style="width: 34%;">
          <%= link_to "新着順", posts_path(latest: "true"), class:"nav-link active bg-light fs-6" %>
        </li>
        <li class="nav-item text-center" style="width: 33%;">
          <a class="nav-link" href="#">フォロー中</a>
        </li>
        <li class="nav-item text-center" style="width: 33%;">
          <%= link_to "評価順", posts_path(like_count: "true"), class:"nav-link active bg-light fs-6" %>
        </li>
      </ul>
      <%= render 'index', posts: @posts %>
    </div>
  </div>
</div>